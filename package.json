{
  "name": "server-stats",
  "version": "1.0.0",
  "author": "Amal Francis <amalfra@gmail.com>",
  "description": "A desktop application to view Linux server stats using SSH",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:amalfra/server-stats.git"
  },
  "bugs": {
    "url": "https://github.com/amalfra/server-stats/issues"
  },
  "homepage": "https://github.com/amalfra/server-stats",
  "keywords": [
    "electron",
    "server",
    "stats",
    "status",
    "dashboard"
  ],
  "private": true,
  "main": "main.js",
  "build": {
    "appId": "com.amalfra.server-stats",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "snap"
      ],
      "category": "Utility"
    },
    "win": {
      "target": "nsis"
    },
    "directories": {
      "buildResources": "resources"
    },
    "publish": null,
    "files": [
      "build/*",
      "resources/*",
      "main.js"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "copy-webpack-plugin": "^4.4.1",
    "css-loader": "^0.28.9",
    "electron": "^7.2.4",
    "electron-builder": "^20.0.5",
    "enzyme": "^3.3.0",
    "file-loader": "^0.11.2",
    "mocha": "^3.5.3",
    "sinon": "^4.3.0",
    "spectron": "^3.8.0",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.11.0"
  },
  "devEngines": {
    "node": ">=8.x"
  },
  "dependencies": {
    "alt": "^0.18.6",
    "chart.js": "^2.6.0",
    "react": "^15.6.1",
    "react-chartjs-2": "^2.7.0",
    "react-dom": "^15.6.1",
    "react-router-dom": "^4.1.2",
    "semantic-ui-css": "^2.2.14",
    "semantic-ui-react": "^0.71.5",
    "ssh2": "^0.5.5"
  },
  "scripts": {
    "start": "npm run compile:dev && ENV=development ./node_modules/.bin/electron .",
    "start:win": "npm run compile:dev && set ENV=development && .\\node_modules\\.bin\\electron .",
    "compile:dev": "webpack --config webpack.config.development.js",
    "compile:prod": "webpack --config webpack.config.production.js",
    "mocha": "mocha --compilers js:babel-core/register",
    "test": "npm run compile:dev && npm run mocha -- './app/**/__tests__/*.js'",
    "test:e2e": "npm run compile:dev && ./node_modules/mocha/bin/mocha __tests__/index.js",
    "build:linux": "npm run compile:prod && electron-builder --linux --x64",
    "build:osx": "npm run compile:prod && electron-builder --mac --x64",
    "build:win": "npm run compile:prod && electron-builder --win --x64"
  }
}
