{
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 8
  },
  "env": {
    "mocha": true,
    "node": true,
    "es6": true,
    "browser": true
  },
  "plugins": ["babel"],
  "parser": "babel-eslint",
  "rules": {
    "max-len": [2, 120],
    "react/jsx-props-no-spreading": "off",
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
  }
}
